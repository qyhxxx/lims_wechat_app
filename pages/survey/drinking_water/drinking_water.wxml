<!--pages/survey/drinking_water/drinking_water.wxml-->
<view class='title'>
  <text>{{title[exercise_num-1]}}</text>
</view>
<view class='option-list'>
  <radio-group class="radio-group" bindchange="radioChange">
    <label class='option-radio' wx:for="{{option}}">
      <radio class='{{radio}}' value="{{item.value}}"/>{{item.name}}
    </label>
  </radio-group>
</view>
<view>
  <button bindtap='preExercise' class='button-pre' size='mini'>{{button_pre}}</button>
  <button bindtap='nextExercise' class='button-next' size='mini'>{{button_next}}</button>
</view>
