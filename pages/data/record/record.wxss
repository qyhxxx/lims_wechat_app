.record-wrapper {
  display: flex;
  align-items: center;
  margin-top: 15px;
  margin-left: 12px;
  margin-right: 12px;
}

.record-table {
  display: flex;
  flex-direction: column;
  height: 600px;
}

.record-header {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #4169E1;
}

.record-content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid #4169E1;
  border-right: 1px solid #4169E1;
}

.header-column {
  width: 100%;
  color: white;
  font-size: 15px;
  padding: 10px;
  text-align: center;
}

.item-column {
  width: 100%;
  font-size: 15px;
  padding: 10px;
  text-align: center;
}